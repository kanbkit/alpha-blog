<!--Shared form to new, edit-->
<% if @article.errors.any? %>
    <h2>Create article has error!</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <%end%>
    </ul>
<%end%>


<div class='row'>
    <div class="col-xs-12">
        <%= form_for(@article, :html =>  {class: "form-horizontal", role: "form"}) do |n| %>
            
            <!--Input new title-->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= n.label :title %>
                </div>
                <div class="col-sm-8">
                    <%= n.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>
            <!--Input new description-->
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= n.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= n.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
                </div>
            </div>
            
            <!--Submit new article-->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= n.submit class: "btn btn-primary btn-lg" %>
                </div>
            </div>
            
        <%end%>
        
        <div class="col-xs-4 col-xs-offset-4">
            [<%= link_to 'Cancel and return to articles listing', articles_path%>]
        </div>


    </div>
</div>